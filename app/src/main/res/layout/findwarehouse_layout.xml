<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#ECECEC"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#B1B1B1" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:padding="2dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/common_route" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/findroute_tv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="安徽省"
                android:textSize="18dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/findroute_time"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/time"
            android:gravity="center"
            android:text="我是时间:" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@mipmap/cangku" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:gravity="center|left"
            android:text="仓库类型："
            android:textSize="15dp" />

        <TextView
            android:id="@+id/findroute_cartype"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="常用车型"
            android:textColor="#2d2d2d"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="top"
            android:src="@mipmap/mianji" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="top"
            android:layout_marginLeft="6dp"
            android:gravity="center|left"
            android:text="仓库面积:"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/findroute_carline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="4.仓库面积仓库积"
            android:textColor="#2d2d2d"
            android:textSize="18sp" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="7dp">


        <TextView
            android:id="@+id/find_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="cdjkfjsdlfj"
            android:textColor="#2d2d2d"
            android:textSize="18dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/findroute_tel"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded2"
            android:gravity="center"
            android:text="电话联系"
            android:textColor="@color/banner" />


        <TextView
            android:id="@+id/findroute_route"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded"
            android:gravity="center"
            android:text="选择仓库"
            android:textColor="#ffffff" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"></View>


</LinearLayout>