<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#5716da">

        <ImageView
            android:id="@+id/source_release_activity_iv1"
            android:layout_width="50dp"
            android:layout_gravity="left"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@mipmap/left"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="货源管理"
            android:textColor="#fff"
            android:textSize="20dp"/>

        <TextView
android:visibility="gone"
            android:id="@+id/source_release_activity_tv1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="发布货源"
            android:textColor="#fff"
            android:textSize="20dp"/>
    </FrameLayout>

    <RadioGroup
        android:id="@+id/source_release_activity_RG"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d2cece"
        android:padding="6dp"
        android:orientation="horizontal">

        <RadioButton

            android:textColor="#4472d4"
            android:background="@drawable/car"
            android:id="@+id/source_release_activity_rad1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="求库中"
            android:textSize="18dp"/>

        <RadioButton
            android:textColor="#323232"
            android:id="@+id/source_release_activity_rad2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="存储中"
            android:textSize="18dp"/>
        <RadioButton
            android:textColor="#323232"
            android:id="@+id/source_release_activity_rad3"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="已完成"
            android:textSize="18dp"/>


    </RadioGroup>

    <FrameLayout
        android:id="@+id/source_release_activity_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>